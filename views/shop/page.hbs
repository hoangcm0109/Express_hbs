                    function load_product_page(page=1, cate_id, sort){
                        console.log(sort)
                        let htmlListProduct=``
                        $.getJSON(`/api/shop?page=${page}&cate_id=${cate_id||''}&filter=${sort || ""}`, function (products) {
                            const data= products.data.map(v=>{
                                return `
                                    <div class="col-lg-4 col-md-6 col-sm-6">
                                        <div class="product__item">
                                            <div class="product__item__pic">
                                                <a href="/detail/${v.product_Id}">
